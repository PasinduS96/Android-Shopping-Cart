<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pasindusenarathne.mobile_app.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/user_name_register"
            android:layout_marginTop="120dp"
            android:layout_width="320dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_user_30px"/>

        <EditText
            android:id="@+id/password_text_register"
            android:layout_width="320dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_password_30px"/>

        <EditText
            android:id="@+id/email_address"
            android:layout_width="320dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_email_30px"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="216dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_buttons"
            android:text="Register" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
